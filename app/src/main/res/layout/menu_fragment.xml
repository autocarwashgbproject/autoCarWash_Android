<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/toolbar_title_txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo"
            android:gravity="center"
            android:src="@drawable/ic_title"
            android:text="@string/car_wash"
            android:textSize="@dimen/heading_text_size" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_profile_card_id"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/account_icon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/account_icon"
                app:srcCompat="@drawable/ic_account" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_name_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Иванов Иван Иванович"
                    android:textColor="@color/colorDefaultText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/account_phone_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+7(999) 999-99-99"
                    android:textColor="@color/colorGreyText"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/payment_btn_id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawableStart="@drawable/ic_payment"
            android:drawableLeft="@drawable/ic_payment"
            android:gravity="start"
            android:drawablePadding="16dp"
            android:text="@string/payment_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/heading_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDefaultText" />

        <Button
            android:id="@+id/history_btn_id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/menu_bubbles_item"
            android:drawableLeft="@drawable/menu_bubbles_item"
            android:text="@string/history_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/heading_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDefaultText" />

        <Button
            android:id="@+id/settings_btn_id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/menu_settings_item"
            android:drawableLeft="@drawable/menu_settings_item"
            android:text="@string/parameters_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/heading_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDefaultText" />

        <Button
            android:id="@+id/help_btn_id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/menu_help_item"
            android:drawableLeft="@drawable/menu_help_item"
            android:text="@string/help_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/heading_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDefaultText" />

        <Button
            android:id="@+id/about_btn_id"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/menu_about_item"
            android:drawableLeft="@drawable/menu_about_item"
            android:text="@string/about_menu_text"
            android:textAllCaps="false"
            android:textColor="@color/colorDefaultText"
            android:textSize="@dimen/heading_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDefaultText" />
    </LinearLayout>


