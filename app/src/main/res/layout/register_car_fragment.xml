<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/background"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/toolbar_title_txt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/ic_title"
                android:text="@string/car_wash"
                android:textSize="@dimen/heading_text_size"
                android:contentDescription="@string/logo" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/welcome_txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="@string/enter_car_info"
            android:textColor="@color/colorDefaultText"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/enter_to_continue_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="@string/set_car_number_and_region"
            android:textAlignment="center"
            android:textColor="@color/colorGreyText"
            android:textSize="@dimen/heading_text_size" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/car_number_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:textAlignment="center"
                android:hint="@string/x"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_2"/>
            <EditText
                android:id="@+id/car_number_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/_0"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_3"/>
            <EditText
                android:id="@+id/car_number_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/_0"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_4"/>
            <EditText
                android:id="@+id/car_number_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/_0"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_5"/>
            <EditText
                android:id="@+id/car_number_5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/x"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_6"/>
            <EditText
                android:id="@+id/car_number_6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/x"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:nextFocusRight="@id/car_number_7"/>
            <EditText
                android:id="@+id/car_number_7"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_edttxt"
                android:hint="@string/_00"
                android:textAlignment="center"
                android:layout_marginStart="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDefaultText"
                android:layout_marginLeft="8dp"
                android:text="@string/rus"
                android:layout_marginStart="8dp" />



        </LinearLayout>


        <Button
            android:id="@+id/register_btn_id"
            style="@style/MainButton"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_marginTop="120dp"
            android:text="@string/save"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="#F3FAFB"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>

</ScrollView>