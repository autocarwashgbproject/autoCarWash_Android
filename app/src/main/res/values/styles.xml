<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--Buttons-->
    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!--Text views-->
    <style name="DefaultText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorDefaultText</item>
    </style>

    <style name="DefaultGreyText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallGreyText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>

    <style name="SmallestGreyText">
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>


</resources>
